{
  "name": "slack-code-challenges",
  "version": "1.0.0",
  "description": "App for managing hiring coding challenges. Uses Slack as UI for the company to discuss and organize the work and Github for repository and conversation with the candidate.",
  "repository": {
    "type": "git",
    "url": "https://github.com/eberhm/slack_challenge_bot.git"
  },
  "main": "index.js",
  "bin": {
    "berry_challenges": "./src/application/cli/cli.ts"
  },
  "engines": {
    "npm": ">=6.14.0",
    "node": ">=14.18.0"
  },
  "dependencies": {
    "@types/uuid": "^8.3.3",
    "dotenv": "^10.0.0",
    "mysql2": "^2.3.3",
    "octokit": "^1.7.1",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.41",
    "yargs": "^17.3.0"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/yargs": "^17.0.7",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.0",
    "jest": "^27.2.4",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "start": "echo 'OK'",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint-fix": "eslint --fix src/**/*.ts",
    "pretty": "prettier --write 'src/**/*.ts'",
    "prepare": "husky install",
    "precommit": "npm run lint-fix && npm run pretty && npm run test",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js"
  },
  "license": "ISC"
}
